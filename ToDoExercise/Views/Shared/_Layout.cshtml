<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="~/Content/cssStyles.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <script>

            Vue.component('taskCard', {
                data() {
                    return {
                        pTitleData: this.pTitle,
                        pDescriptionData: this.pDescription,
                        id: this.pId
                    }
                },
                props: ["p-title", "p-description", "p-id"],
                template: "#taskCardTemplate",
                methods: {
                    deleteCard() {
                        this.$emit('delete', this.pId);
                    },
                    changed() {
                        this.$emit('update', this.pTitleData, this.pDescriptionData, this.id)
                    },
                },
            })
            var vm = new Vue({
                el: "#app",
                data() {
                    return {
                        forms: [],
                        counter: 0
                    }
                },
                methods: {
                    createCard() {

                        var emptyCardObject = { title: "", description: "", id: `${this.counter++}` }
                        this.forms.push(emptyCardObject)
                        window.localStorage.setItem('forms', JSON.stringify(this.forms))
                        window.localStorage.setItem('counter', this.counter)
                    },
                    parentDelete(i) {
                        var indexOf = this.forms.indexOf(this.forms.find(e => e.id == i))
                        var temporalForms = JSON.parse(window.localStorage.getItem('forms'))
                        temporalForms.splice(indexOf, 1)
                        window.localStorage.setItem('forms', JSON.stringify(temporalForms))
                        window.localStorage.setItem('counter', this.counter)
                        this.forms = JSON.parse(window.localStorage.getItem('forms'))

                    },
                    parentUpdate(title, description, i) {

                        
                        var indexOf = this.forms.indexOf(this.forms.find(e => e.id == i))
                        var formToEdit = this.forms.find(e => e.id == i)
                        formToEdit.title = title
                        formToEdit.description = description

                        this.forms.splice(indexOf, 1, formToEdit)

                        window.localStorage.setItem('forms', JSON.stringify(this.forms))
                        window.localStorage.setItem('counter', this.counter)
                    },

                },
                mounted() {
                    if (window.localStorage.getItem('forms')) {
                        this.forms = JSON.parse(window.localStorage.getItem('forms'))
                        this.counter = window.localStorage.getItem('counter')
                    }
                }
            })
                                                                            //vm.$watch('forms', (lastestValue, beforeValue) => {
                                                                            //    window.localStorage.setItem('forms', JSON.stringify(lastestValue));
                                                                            //}, { deep: true })
        </script>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
