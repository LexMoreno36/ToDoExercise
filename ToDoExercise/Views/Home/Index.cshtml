
@{
    ViewBag.Title = "Index";
}
<div id="app">
    <h2>ToDo - tasks</h2>
    <hr />

    <button type="button" class="btn btn-primary" v-on:click="createCard">Create task</button>

    <div class="form-container container">

        <task-card v-for="form in forms"
                   :p-title="form.title"
                   :p-name="form.name"
                   :p-surnames="form.surnames"
                   :p-description="form.description"
                   v-on:delete="parentDelete">

        </task-card>




        @* This is where we generate the template *@

        <script type="text/x-template" id="taskCardTemplate">

            <form class="card card-body classTaskCard" style="width: 10px; padding:30px 20px;" v-on:submit.prevent="onSubmit" v-on:keyup="changed">
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Surname</label>
                    <input type="text" class="form-control" name="surnames">
                </div>
                <div class="mb-3">
                    <label class="form-label">Task description</label>
                    <textarea class="form-control" name="description" rows="3"></textarea>
                </div>
                <button v-on:click="deleteCard" type="button" class="btn btn-danger" style="margin: 30px 20px 0px 20px ">Delete Task</button>
            </form>

        </script>

    </div>
</div>
