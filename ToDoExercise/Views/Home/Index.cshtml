
@{
    ViewBag.Title = "Index";
}
<div id="app">
    <h2>ToDo - tasks</h2>
    <hr />

    <button type="button" class="btn btn-primary" v-on:click="createCard" data-toggle="modal" data-target="#modalId">Create task</button>

    <div class="form-container container">

        <li-task v-for="form in forms" :key="form.id"
                 :p-title="form.title"
                 :p-description="form.description"
                 :p-name="form.name"
                 :p-id="form.id"
                 v-on:openmodal="passId"
                 v-on:deleteelement="parentDelete">
        </li-task>
        <modal-component :m-id="modalInput.id"
                         :m-title="modalInput.title"
                         :m-description="modalInput.description"
                         :m-name="modalInput.name"
                         v-on:savecontent="parentUpdate">

        </modal-component>

    </div>
</div>

<script type="text/x-template" id="liTaskCardTemplate">
    <div>
        <div class="form-list list-group-item list-group-item-action ">
            <nav>
                <div>
                    <h3 class="mb-1">{{pTitle}}</h3>
                </div>
                <p class="mb-1">{{pDescription}}</p>
                <small>{{pName}}</small>
            </nav>
            <nav class="centered-buttons">
                <button type="button" class="btn btn-primary button-in-list" data-toggle="modal" data-target="#modalId" v-on:click="openModal">Edit</button>
                <button type="button" class="btn btn-danger button-in-list" v-on:click="deleteElement">Delete</button>
            </nav>
        </div>
    </div>
</script>




<script type="text/x-template" id="modalTemplate">
    <div class="modal fade" id="modalId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="width:400px" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Editar Tarea</h2>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="col-form-label">Title</label>
                            <input type="text" class="form-control" style="max-width:none" v-model="modalTitleData">
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Task description</label>
                            <textarea class="form-control" name="description" rows="3" style="max-width:none" v-model="modalDescriptionData"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Name</label>
                            <input type="text" class="form-control" style="max-width:none" v-model="modalNameData">
                        </div>
                    </form>
                </div>
                <div class="modal-footer separated-buttons">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" v-on:click="saveContent">Save Task</button>
                </div>
            </div>
        </div>
    </div>
</script>





